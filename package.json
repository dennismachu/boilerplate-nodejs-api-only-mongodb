{
  "name": "boilerplate-nodejs-api-only-mongodb",
  "version": "1.0.0",
  "description": "An Express Server Node.js API only boilerplate with Mongo DB",
  "main": "index.js",
  "scripts": {
    "test": "nyc _mocha www/test --timeout 10000 --exit --report lcovonly -- -R spec",
    "dev": "nodemon --exec babel-node src/index.js",
    "start": "pm2-runtime start www/server.js -i max",
    "watch": "babel ./src --out-dir www --source-maps --watch",
    "clean": "rimraf www",
    "transpile": "babel ./src --out-dir www --source-maps",
    "build": "npm-run-all clean transpile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dennismachu/boilerplate-nodejs-api-only-mongodb.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dennismachu/boilerplate-nodejs-api-only-mongodb/issues"
  },
  "homepage": "https://github.com/dennismachu/boilerplate-nodejs-api-only-mongodb#readme",
  "dependencies": {
    "agenda": "^4.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eventemitter3": "^4.0.7",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^5.11.19",
    "mongoose-paginate-v2": "^1.3.14",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.18",
    "pm2": "^4.5.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/node": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "faker": "^5.4.0",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2"
  }
